---
import Section from "@/components/Section.astro";
import { education } from "@cv-br";
---

<Section title="Educação">
  <ul>
    {
      education.map(({ institution, studyType, startDate, endDate }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Atual";
        if (startYear == endYear) {
          const years = `${startYear}`;
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>{institution}</h3>
                    <h4>{studyType}</h4>
                  </div>
                  <time>{years}</time>
                </header>
              </article>
            </li>
          );
        }
        const years = `${startYear} - ${endYear}`;
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                  <h4>{studyType}</h4>
                </div>
                <time>{years}</time>
              </header>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .article h3 {
    font-weight: 500;
    color: #111;
  }

  .article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  .time {
    font-size: 0.85rem;
    color: #555;
  }
  .about {
    max-width: 700px;
    margin: 0 auto 38px;
    margin-bottom: 6px;
  }
</style>
