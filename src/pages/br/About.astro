---
import Section from "@/components/Section.astro";

import { basics } from "@cv-br";
const { summary } = basics;
---

<div class="about">
  <Section title="Sobre mim">
    <p>
      {summary}
    </p>
  </Section>
</div>

<style>
  .about {
    max-width: 700px;
    margin: 0 auto 38px;
    margin-bottom: 44px;
  }

  @media (min-width: 768px) {
    p {
      font-size: 0.874rem;
    }
  }

  @media (min-width: 1024px) {
    p {
      font-size: 0.874rem; /* Tama√±o para pantallas extra grandes */
    }
  }
</style>
