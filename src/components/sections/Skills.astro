---
import Section from "../Section.astro";
import { skills } from "@cv";
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => (
        <li>
          <span>{name}</span>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
    border-radius: 6px;
    background: #eee;
    color: black;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  li:hover {
    background: #8b8b8b;
    transition: all 0.3s ease;
  }
</style>
