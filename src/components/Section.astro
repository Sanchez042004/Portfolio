---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>
<style>
  section {
    max-width: 700px;
    margin: 0 auto 38px;
    margin-bottom: 44px;
  }
  @media (min-width: 768px) {
    section {
      max-width: 840px;
      margin: 0 auto 38px;
      margin-bottom: 28px;
    }
  }

  @media (min-width: 1024px) {
    section {
      max-width: 700px;
      margin: 0 auto 38px;
      margin-bottom: 44px;
    }
  }

  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  @media (min-width: 768px) {
    h2 {
      margin-bottom: 8px;
      font-weight: 680;
      line-height: 1.5;
      font-size: 2.2rem;
    }
  }

  @media (min-width: 1024px) {
    h2 {
      margin-bottom: 8px;
      font-weight: 700;
      line-height: 1.5;
      font-size: 1.5rem;
    }
  }
</style>
